
<% @title = "Listing trades" %>

<% content_for :description do %>
<p>Edit this template in <code>app/views/Trades/index.html.erb</code>.</p>
<% end %>

<%= link_to new_trade_path, class: 'btn btn-primary btn-large pull-right' do %>
<%= fa_icon_tag "plus" %> Add Trade

<% end %>

<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
      <div class="sheet sheet-condensed">
        <div class="sheet-inner">
          <table class="table">
            <thead>
              <tr>
                                <th></th>
              </tr>
            </thead>

            <tbody>
              <% @trades.each do |trade| %>
              <tr>
                                <td class="actions">
                                  <%=trade.loc%>
                  <%= link_to fa_icon_tag("eye"), trade, rel: 'tooltip', title: 'Show' %>
                  <%= link_to fa_icon_tag("pencil"), edit_trade_path(trade), rel: 'tooltip', title: 'Edit' %>
                  <%= link_to fa_icon_tag("trash-o"), trade, rel: 'tooltip', title: 'Delete',
                  data: { confirm: 'Are you sure?' }, method: :delete %>
                </td>
              </tr>
              <% end %>
              <% if @trades.length == 0 %>
              <tr><td colspan=42 class='text-center'>No trades.</td></tr>
              <% end %>
            </tbody>
          </table>
        </div><!-- /.sheet-inner -->
      </div><!-- /.sheet -->

                </div>
  </div>
</div>
